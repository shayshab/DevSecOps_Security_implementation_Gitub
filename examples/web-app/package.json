{
  "name": "devsecops-web-app",
  "version": "1.0.0",
  "description": "Sample web application for DevSecOps security testing",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:security": "npm run test:owasp && npm run test:vulnerabilities",
    "test:owasp": "jest --testPathPattern=owasp",
    "test:vulnerabilities": "jest --testPathPattern=vulnerabilities",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint .",
    "lint:security": "eslint . --config .eslintrc.security.js",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "security-check": "npm run audit && npm run lint:security && npm run test:security"
  },
  "keywords": [
    "devsecops",
    "security",
    "web",
    "nodejs",
    "express"
  ],
  "author": "DevSecOps Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "prom-client": "^15.0.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-import": "^2.29.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devsecops/web-app.git"
  },
  "bugs": {
    "url": "https://github.com/devsecops/web-app/issues"
  },
  "homepage": "https://github.com/devsecops/web-app#readme"
}
